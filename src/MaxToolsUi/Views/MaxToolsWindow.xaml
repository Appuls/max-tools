<Window
    x:Class="MaxToolsUi.Views.MaxToolsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MaxToolsUi.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MaxToolsUi.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Title="MaxTools"
    Width="Auto"
    Height="Auto"
    prism:ViewModelLocator.AutoWireViewModel="True"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">

    <StackPanel Width="450" Orientation="Vertical">
        <TextBlock>Common Properties</TextBlock>
        <ItemsControl
            Margin="0,0,0,10"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding PropertyEntries}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <controls:PropertyEntryUC
                        AddToSelectionCommand="{Binding Path=AddToSelectionCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                        CandidateValues="{Binding CandidateValues}"
                        EntryName="{Binding EntryName}"
                        RemoveCommand="{Binding Path=RemoveCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                        SelectCommand="{Binding Path=SelectCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Window>
